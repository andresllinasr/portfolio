{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Tiny SPA with TypeScript, SCSS, and TailwindCSS",
  "main": "src/index.ts",
  "scripts": {
    "dev": "webpack serve --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "start": "npm run build && serve -s dist -l 3000",
    "deploy": "gh-pages -d dist",
    "audit": "concurrently \"npm run build\" \"serve -s dist -l 3000\" \"npx wait-on http://localhost:3000 && npx lighthouse http://localhost:3000 --output html --output-path ./public/lighthouse-report.html\""
  },
  "author": "Andrés Llinás",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "gh-pages": "^6.3.0",
    "globals": "^16.4.0",
    "html-webpack-plugin": "^5.6.4",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "prettier": "^3.6.2",
    "raw-loader": "^4.0.2",
    "sass": "^1.77.0",
    "sass-loader": "^13.3.2",
    "serve": "^14.2.5",
    "style-loader": "^4.0.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-no-restricted-syntax": "^2.2.1",
    "tailwindcss": "^4.1.14",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "gsap": "^3.13.0",
    "handlebars": "^4.7.8"
  }
}
