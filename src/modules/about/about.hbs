<div class="section-bg-wrapper section-primary">
  <section class="flex flex-col gap-8 md:gap-16">
    <div class="flex flex-col gap-4">
      <h2 class="text-3xl font-bold">{{header}}</h2>
      <p class="text-lg text-zinc-200">{{intro}}</p>
    </div>
    <div class="flex flex-col gap-4">
      <h3 class="text-3xl font-semibold">{{approach.title}}</h3>
      <div
        class="{{approach.class}} flex flex-col gap-4 sm:gap-0 sm:flex-row justify-center text-center sm:text-start text-3xl sm:text-4xl font-bold text-zinc-300">
        {{approach.steps}}</div>
    </div>
    <div class="flex flex-col gap-4">
      <h3 class="text-2xl font-semibold">I specialize in:</h3>
      <ul class="list-disc list-inside md:pl-8" >
        {{#each specialties}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  </section>
</div>
</div>