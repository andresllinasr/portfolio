<div class="section-bg-wrapper section-primary wide">
  <section class="wide">
    <div class="text-center">
      <h2 class="text-2xl sm:text-3xl font-bold mb-4">{{header}}</h2>
      <p class="text-lg text-zinc-400 mb-12">{{subheader}}</p>

      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4 sm:gap-8 items-center justify-items-center">
        {{#each companies}}
          <a href="{{url}}" target="_blank" rel="noopener noreferrer" class="block group focus-visible:ring-3 focus-visible:ring-main-400 focus-visible:ring-offset-2 rounded-3xl p-6 sm:p-12 border-2 border-zinc-300 border-dotted transition-all duration-300 ease hover:border-main-600 cursor-pointer">
            <img src="{{svg}}" alt="{{name}}" class="h-10 sm:h-16 w-auto mx-auto grayscale brightness-200 group-hover:grayscale-0 group-hover:brightness-100 group-hover:scale-105 transition-all duration-300 ease" />
          </a>
        {{/each}}
      </div>
    </div>
  </section>
</div>